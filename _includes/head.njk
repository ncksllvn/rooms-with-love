{% set fullTitle %}{{ title }} | {{ website.title }}{% endset %}
{% set fullUrl %}{{ website.baseUrl }}{{ page.url }}{% endset %}
<head>
  <meta charset="utf-8">

  <title>{{ fullTitle }}</title>

  {% if private %}
    <meta name="robots" content="noindex" />
  {% endif %}

  <meta name="description" content="{{ description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta property="og:title" content="{{ fullTitle }}">
  <meta property="og:url" content="{{ fullUrl }}">

  <meta property="og:type" content="website">
  <meta property="og:image" content="{{ "/android-chrome-512x512.png" | url }}">

  <link rel="manifest" href="{{ "/site.webmanifest" | url }}">
  <link rel="apple-touch-icon" href="{{ "/android-chrome-512x512.png" | url }}">
  <link rel="shortcut icon" href="{{ "/favicon.ico" | url }}" />

  <link rel="stylesheet" href="{{ "/style/main.css" | url }}">
  <meta name="theme-color" content="{{ website.themeColor }}">

  {% include './analytics.njk' %}

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
</head>
